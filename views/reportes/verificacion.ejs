<% layout('../partials/layout') -%>
<% block('title', 'Inicio'); -%>

<div class="container my-4">
    <div class="row">
      <div class="col-md-6 offset-md-3 text-center">
          <a href="/"><img id="logoPrincipal" src="/images/LogoColAba.png" alt="LogoColAba"></a>
      </div>
      <div class="card col-md-6 offset-md-3">
          <div class="card-header fw-bold bg-white">
              <h3 class="text-center fw-regular">Verificación</h3>
          </div>
          <div class="card-body">
              <form action="/reportes/verificar" method="POST">
                  <div class="row">
                      <div class="">
                          <div class="form-group mt-3">
                            <label for="dni">DNI:</label>
                            <input type="number" class="form-control" id="dni" name="dni" placeholder="DNI">
                          </div>
                          <div class="form-group mt-3">
                            <label for="codigo">Código de verificación:</label>
                            <input type="text" class="form-control" id="codigo" name="codigo" placeholder="Código de verificación">
                          </div>
                      </div>
                  </div>
                  </br>
                  <div class="text-center">
                      <button type="submit" class="btn btn-primary">Continuar</button>
                  </div>
              </form>
          </div>
      </div>   
    </div>
  </div>
  