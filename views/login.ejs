<% layout('partials/layout') -%>
<% block('title', 'Inicio de sesión'); -%>
<!-- navbar -->
<%- partial('partials/nav')%>
<div class="container my-4">
    <div class="row">
      <div class="col-md-4 offset-md-4 text-center">
        <img id="logoPrincipal" src="LogoColAba.png" alt="LogoColAba">
      </div>
         <div class="card col-md-4 offset-md-4">
             <div class="card-header bg-white">
                <h2 class="text-center fw-bold">Iniciar sesión</h2>
             </div>
            <div class="card-body">
                <form action="/usuarios/login" method="POST">
                    <div class="form-group m-3">
                      <label for="email">Correo electrónico</label>
                      <div class="inner-addon left-addon">
                            <i class="fas fa-user glyphicon border-end iconoPriCol"></i>
                        <input type="email" class="form-control" id="email" name="email" placeholder="Correo electrónico">
                      </div>
                    </div>
                    <div class="form-group m-3">
                        <label for="password">Contraseña</label>
                      <div class="inner-addon left-addon">
                        <i class="fas fa-lock glyphicon border-end iconoPriCol"></i>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Contraseña">
                      </div>
                    </div>
                    
                    </br>
                    <div class="text-center">
                        <button type="submit" class="w-100 btn btn-primary">Iniciar Sesión</button>
                        </br>
                        <small><a href="">¿Olvidaste tu usuario y/o contraseña?</a></small>
                        </br>
                        <small>¿No tienes una cuenta? <a href="/register">Solicite nuestro servicio.</a></small>
                    </div>
                </form>
             </div>
        </div>
    </div>  
</div>